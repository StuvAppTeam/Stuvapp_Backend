<p id="notice"><%= notice %></p>

<h1>Listing Offer Blackboards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Totalprice</th>
      <th>Image</th>
      <th>Street</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>User</th>
      <th>Category</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offer_blackboards.each do |offer_blackboard| %>
      <tr>
        <td><%= offer_blackboard.title %></td>
        <td><%= offer_blackboard.description %></td>
        <td><%= offer_blackboard.totalPrice %></td>
        <td><%= offer_blackboard.image_id %></td>
        <td><%= offer_blackboard.street %></td>
        <td><%= offer_blackboard.city %></td>
        <td><%= offer_blackboard.zipcode %></td>
        <td><%= offer_blackboard.user_id %></td>
        <td><%= offer_blackboard.category_id %></td>
        <td><%= offer_blackboard.condition %></td>
        <td><%= link_to 'Show', offer_blackboard %></td>
        <td><%= link_to 'Edit', edit_offer_blackboard_path(offer_blackboard) %></td>
        <td><%= link_to 'Destroy', offer_blackboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

